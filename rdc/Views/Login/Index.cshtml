@model rdc.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>Login no Reclame Agora</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<p>
    Favor informar seu Usuário e Senha. @Html.ActionLink("Registre-se", "Registro") aqui se você não possui conta.
</p>
@{
    if (!string.IsNullOrEmpty(ViewBag.msgLogin)){
        <div class="success">@ViewBag.msgLogin</div>
        <br />
    }
}
@using (Html.BeginForm())
{
    <div>
        <fieldset>
            <legend>Informações do Login</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Login)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Login, new { uifocus = "focus" })
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('input[uifocus=focus]').focus();
                    });
                </script>
                @Html.ValidationMessageFor(m => m.Login)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Senha)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Senha)
                @Html.ValidationMessageFor(m => m.Senha)
            </div>

            <p>
                <input type="submit" class="button" value="Entrar" />
            </p>
            <p>
                Caso tenha esquecido seu Login e Senha, clique @Html.ActionLink("aqui", "RecLoginEmail") para recuperar.
            </p>
            @Html.ValidationSummary()
        </fieldset>
    </div>    
}